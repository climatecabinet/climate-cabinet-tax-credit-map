{
    "version":"2.0.0",
    "tasks": [
        {
            "label": "fmt",
            "type": "shell",
            "command": "isort ${file} && docformatter ${file} --in-place && black ${file} --line-length 79"
        },
        {
            "label": "type",
            "type": "shell",
            "command": "mypy ${file} --follow-imports=skip"
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "flake8 ${file}"
        },
        {
            "label": "cleanup",
            "type": "shell",
            "command": "cd ${workspaceFolder} && find . | grep \"/__pycache__$\" | xargs rm -rf"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cd ${workspaceFolder} && coverage run --source \"pipeline\" --omit \"*/tests/*,manage.py\" pipeline/manage.py test && coverage report --fail-under=30"
        }
    ]
}